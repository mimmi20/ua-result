{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/mimmi20/ua-result/master/schema/device.json",

  "definitions": {
    "device": {
      "type": "object",
      "properties": {
        "deviceName": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "marketingName": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "manufacturer": {
          "type": "string"
        },
        "brand": {
          "type": "string"
        },
        "display": {"$ref": "display.json#/definitions/display"},
        "dualOrientation": {
          "type": "boolean"
        },
        "type": {
          "type": "string"
        },
        "simCount": {
          "type": "integer",
          "minimum": 0,
          "multipleOf": 1
        },
        "market": {"$ref": "market.json#/definitions/market"},
        "connections": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "deviceName",
        "marketingName",
        "manufacturer",
        "brand",
        "display",
        "dualOrientation",
        "type",
        "simCount",
        "market",
        "connections"
      ]
    }
  },

  "$ref": "#/definitions/device"
}
